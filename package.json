{
  "name": "juniorcvbackend",
  "version": "1.0.0",
  "description": "A backend application for managing user authentication and data using Express and MongoDB.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.23",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.5",
    "puppeteer": "^24.16.0",
    "sanitize-html": "^2.17.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "author": "Med Hedi Ben Salah",
  "license": "ISC",
  "keywords": [],
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MedHedi19/juniorCvBackend.git"
  },
  "bugs": {
    "url": "https://github.com/MedHedi19/juniorCvBackend/issues"
  },
  "homepage": "https://github.com/MedHedi19/juniorCvBackend#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/scrapers/**",
      "!server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
