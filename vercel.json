{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret", 
    "JWT_REFRESH_SECRET": "@jwt_refresh_secret"
  },
  "functions": {
    "server.js": {
      "maxDuration": 10
    }
  }
}
